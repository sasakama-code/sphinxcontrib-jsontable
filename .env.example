# RAG統合機能の環境変数設定例
# このファイルをコピーして .env を作成し、実際の値を設定してください

# OpenAI API設定（Phase 3でオプション機能として使用）
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=text-embedding-3-small

# PLaMo設定（基本的にローカルモデルのためAPIキー不要）
PLAMO_MODEL_PATH=./models/plamo-embedding-1b
PLAMO_CACHE_DIR=./cache/plamo

# デバッグ・開発設定
DEBUG_MODE=false
LOG_LEVEL=INFO
CACHE_ENABLED=true

# パフォーマンス設定
MAX_BATCH_SIZE=32
VECTOR_CACHE_SIZE=1000
MEMORY_LIMIT_MB=2048

# 注意: .env ファイルは .gitignore で除外されているため、
#       実際のAPIキーやシークレットを安全に保存できます